<Window x:Class="ISASWPFInterfaceFW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISASWPFInterfaceFW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel Background="WhiteSmoke" Height="Auto" VerticalAlignment="Top">
            <StackPanel Margin="5 10">
                <Label>Databáze:</Label>
                <TextBox x:Name="TextBoxLogin" Text="CVICNA"/>

                <Label>Uživatelské jméno:</Label>
                <TextBox x:Name="TextBoxUser" Text=""/>

                <Label>Heslo:</Label>
                <PasswordBox x:Name="PasswordBox"/>

                <!--<Label>Role (formuláře):</Label>
                <PasswordBox x:Name="TextBoxRoles"/>-->
            </StackPanel>

            
            
            
        </StackPanel>
    </Grid>
</Window>
